<!DOCTYPE html>
<html lang="tr">
@await Component.InvokeAsync("_HeadLayout")
<body>
    <div id="background" class="background">
        <div id="clickHereMessage"></div>
    </div>
    @await Component.InvokeAsync("_SvgLayout")
    <partial name="_navbar" />
    <section class="py-5">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="banner-blocks">
                        @await Component.InvokeAsync("_BlogViewComponents")
                    </div>
                    @await Component.InvokeAsync("CategoryList")
                        <div class="container pageContainer">
                            @RenderBody()
                        </div>
                </div>
            </div>
        </div>
    </section>
    @await Component.InvokeAsync("_MailViewComponents")
    <footer class="py-5">
        <div class="container-fluid">
            <div class="row">
                @await Component.InvokeAsync("_FooterViewComponents")
            </div>
        </div>
    </footer>
    <style>
        .background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background-image: url('/img/Paw.jpg');
            background-size: contain;
            background-color: white;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            z-index: 10000;
            cursor: pointer;
            transition: opacity 1s ease;
        }

        #clickHereMessage {
            position: absolute;
            top: 20%;
            left: 50%;
            transform: translateX(-50%) translateY(-50%);
            font-size: 30px;
            color: red;
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        .background:hover #clickHereMessage {
            opacity: 1;
        }
        .d-none {
            display: none;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/js/site.js"></script>
    <script src="/js/plugins.js"></script>
    <script>
        window.onload = function() {
            document.getElementById("background").addEventListener("click", function() {
                document.getElementById("background").style.opacity = 0;

                setTimeout(function() {
                    document.getElementById("background").style.display = "none";
                    document.getElementById("mainContent").classList.remove("d-none");
                }, 1000);
            });
        }
    </script>
    <script>
        document.getElementById("search-icon").addEventListener("click", function() {
            document.getElementById("search-form").submit();
        });
            $(document).ready(function() {
            $('.dropdown-toggle').dropdown();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>