@model CategoryListViewModel
<section class="py-5 overflow-hidden" id="category-carousel-section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="section-header d-flex flex-wrap justify-content-between mb-5">
                    <h2 class="section-title">Kategoriler</h2>
                    <div class="d-flex align-items-center">
                        <div class="swiper-buttons">
                            <button class="swiper-prev category-carousel-prev btn btn-yellow">❮</button>
                            <button class="swiper-next category-carousel-next btn btn-yellow">❯</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="category-carousel swiper">
                    <div class="swiper-wrapper">
                        @foreach (var item in Model.Categories)
                        {
                            <a asp-controller="Shop" asp-action="List" asp-route-category="@item.Name.ToLower()" class="nav-link category-item swiper-slide @(Model.SelectedCategory== item.Name.ToLower() ? "active" : "")">
                                <img src="@Url.Content("~/img/" + item.Icon)" alt="Category Thumbnail" class="category-icon">
                                <h3 class="category-title">@item.Name</h3>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        var swiper = new Swiper('.category-carousel', {
            loop: true, // Optionally enable looping
            slidesPerView: 5, // 5 items per view by default
            spaceBetween: 10, // Adjust the space between slides
            navigation: {
                nextEl: '.swiper-next',
                prevEl: '.swiper-prev',
            },
            breakpoints: {
                // Adjust number of items based on screen size
                1200: {
                    slidesPerView: 5, // 5 items for large screens
                },
                992: {
                    slidesPerView: 4, // 4 items for medium screens
                },
                768: {
                    slidesPerView: 3, // 3 items for small screens
                },
                576: {
                    slidesPerView: 2, // 2 items for extra small screens
                },
                0: {
                    slidesPerView: 1, // 1 item for very small screens
                }
            }
        });
    });
</script>
