@model ResultModel
<head>
    <style>
        /* Modal CSS */
        .modal {
            display: none; /* Başlangıçta gizli olacak */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); 
            z-index: 1050;
            align-items: center;
            justify-content: center;
        }

            .modal.show {
                display: flex; /* Modal gösterildiğinde */
            }

        .modal-dialog {
            max-width: 500px;
            margin: 1.75rem auto;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #f8f9fa;
            padding: 15px;
        }

        .modal-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .close {
            font-size: 1.5rem;
            color: #000;
            cursor: pointer;
        }

        .modal-footer {
            display: flex;
            justify-content: flex-end;
            background-color: #f8f9fa;
            padding: 10px;
        }

        .modal-body {
            padding: 15px;
            text-align: center;
        }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
        }
    </style>
</head>

<div class="modal" tabindex="-1" role="dialog" id="resultModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Model.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="closeButton">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
               <div class="alert alert-@Model.Css">  
                   <p>@Model.Message</p>  
                   </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            // Modal'ı açmak için TempData mesajının olup olmadığını kontrol et
            if ('@Model' !== null) {
                $('#resultModal').addClass('show');  // Modal'ı göster
            }

            // Modal'ı kapatmak için tıklama işlevi
            $('#closeButton').click(function () {
                $('#resultModal').removeClass('show');  // Modal'ı gizle
            });

            // Modal dışına tıklayınca da modal kapanacak şekilde ek işlev
            $('.modal').click(function (event) {
                if ($(event.target).hasClass('modal')) {
                    $('#resultModal').removeClass('show');
                }
            });
        });
    </script>
    



