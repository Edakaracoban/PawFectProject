@{
	Layout = null;
}

<head>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>
<meta name="viewport" content="width=device-width, initial-scale=1" />
<style>
	body {
	font-family: Arial, Helvetica, sans-serif;
	}

	.custom-navbar {
	width: 100%;
	background-color: #555;
	overflow: auto;
	}

	.custom-navbar a {
	float: left;
	padding: 12px;
	color: white;
	text-decoration: none;
	font-size: 17px;
	}

	.custom-navbar a:hover {
	background-color: #000;
	}

	.nav-item.active {
	background-color: #04AA6D;
	color: white;
	font-weight: bold;
	}

	/* 	@@media screen and (max-width: 500px) {
	.custom-navbar a {
	float: none;
	display: block;
	}
	} */
</style>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">ETİCARET</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarSupportedContent">
                <div class="col-md-9">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/products/all">Products</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" aria-current="page" asp-controller="Admin" asp-action="CreateProduct">Add Product</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" aria-current="page" href="/admin/products">Admin Products</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" aria-current="page" asp-controller="Admin" asp-action="CreateCategory">Create Category</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" aria-current="page" asp-controller="Admin" asp-action="CategoryList">Category List</a>
                                </li>
                            }
                          
                        }
                        <li class="nav-item dropdown">
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                                <a class="nav-link" asp-controller="Shop" asp-action="List">Products</a>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3 d-flex login-register">
                    <ul class="navbar-nav mr-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" asp-controller="Account" asp-action="Manage">@User.Identity.Name</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                   
                    </ul>
                </div>

            </div>
        </div>
    </nav>

	@RenderBody()
</body>